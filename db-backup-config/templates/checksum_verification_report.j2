    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Server:* `{{ inventory_hostname }}`"
        },
        {
          "type": "mrkdwn",
          "text": "*Stanza:* `{{ pgbackrest_stanza }}`"
        },
        {
          "type": "mrkdwn",
          "text": "*Date:* {{ verification_timestamp }}"
        },
        {
          "type": "mrkdwn",
